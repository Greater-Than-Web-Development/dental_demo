<div class="row" id="sign-up-container">
  <div class="col-lg-12">
    <div class="col-lg-6" id="patient-directions">
      <p>Please sign up for an online account below to proceed with online appointment scheduling.</p>
    </div>
    <div class="col-lg-6" id="sign-up-form">

      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
