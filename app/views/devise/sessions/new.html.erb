<div class="row" id="sign-up-container">
  <div class="col-lg-12">
    <div class="col-lg-6" id="patient-directions">
      <p>Please sign up for an online account below to proceed with online appointment scheduling.</p>
    </div>
    <div class="col-lg-6" id="sign-up-form">

      <h2>Sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
